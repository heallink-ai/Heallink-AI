# Node environment
NODE_ENV=development
PORT=3003

# Database
DATABASE_URL=mongodb://localhost:27017/heallink

# JWT
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_FRONTEND_URL=http://localhost:3002

# OAuth providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

APPLE_ID=your-apple-id
APPLE_SECRET=your-apple-secret

# Email provider (SMTP)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=user@example.com
EMAIL_SERVER_PASSWORD=password
EMAIL_FROM=noreply@heallink.com

# Resend
RESEND_API_KEY=your-resend-api-key

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
# For LocalStack in development
AWS_ENDPOINT=http://localstack:4566
USE_LOCALSTACK=true

# S3 Configuration
S3_BUCKET_NAME=heallink-storage

# DynamoDB Configuration
DYNAMODB_AUDIT_TABLE=heallink-audit-logs